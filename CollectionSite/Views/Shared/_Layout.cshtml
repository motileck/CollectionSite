@using CollectionSite.Utility.Constants
@using CollectionSite.Utility.Extensions
@{
    var routeData = new Dictionary<string, string>
    {
        [CookiesConstants.ReturnUrlName] = Context.Request.Path,
    };

    var isAuthenticated = Context.User.Identity?.IsAuthenticated ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollectionSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CollectionSite.styles.css" asp-append-version="true" />
</head>
<body>

<header class="p-3 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a  class="nav-link px-2 text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a  class="nav-link px-2 text-white"  asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
               
                @if (isAuthenticated)
                {
                    <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Account" asp-action="SignOut" asp-all-route-data="@routeData">SignOut</a></li>
                    <li><a class="nav-link px-2 text-white" asp-controller="PersonalAccount" asp-action="PersonalAccount">PersonalAccount</a></li>
                    <li><a class="nav-link px-2 text-white" asp-controller="Posts" asp-action="CreatePosts">CreatePost</a></li>
                }
                else
                {
                    
                   
                    <a class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="SignIn" >
                        SignIn
                    </a>
                    <a class="btn btn-warning" asp-area="" asp-controller="Account" asp-action="SignUp" >
                        SignUp
                    </a>
                }
            </ul>

           

        </div>
    </div>
</header>
