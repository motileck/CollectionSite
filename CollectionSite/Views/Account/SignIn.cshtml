@using CollectionSite.Utility.Constants
@using CollectionSite.Utility.Extensions
@model SignInViewModel
@{
    var routeData = new Dictionary<string, string>
    {
        [CookiesConstants.ReturnUrlName] = Context.Request.Query.ReturnUrl(),
    };
}

<div class="container-fluid">
    <section class="row justify-content-center">
        <section class="col-12 col-sm-8 col-md-4">
            <form class="form-container" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query.ReturnUrl()" method="post">
                <div class="text" asp-validation-summary="ModelOnly"></div>

                <div class="form-group text">
                    <label class="col-form-label " asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group text">
                    <label class="col-form-label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group text">
                    <label class="col-form-label" asp-for="IsPersistent"></label>
                    <input class="col-form-label" asp-for="IsPersistent" />
                </div>

                <button class="btn-block button-outline" type="submit">
                    "SignIn"
                </button>

                <a class="btn-block button-outline" asp-controller="Account" asp-action="SignUp" asp-all-route-data="@routeData">
                    "SignUp"
                </a>
            </form>
        </section>
    </section>
</div>